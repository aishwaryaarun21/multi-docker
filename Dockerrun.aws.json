{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "aishwaryaarun/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name": "server",
            "image": "aishwaryaarun/multi-server",
            "hostname" : "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "aishwaryaarun/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "aishwaryaarun/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping":[
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client","server"]
        }
    ]
}